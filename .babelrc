{
    "presets": [
        ["@babel/preset-env", {
            "targets": [
                "last 2 versions",
                "not dead",
                "not <2%",
                "not ie 11"
            ],
            "useBuiltIns": "entry"
        }],
        "@babel/preset-react"
    ],
    "plugins": [
        "@babel/plugin-proposal-class-properties",
        // this plugin is a dependency for react-hot-loader, and it converts hot loader specific code to JS...
        "react-hot-loader/babel",
        "@babel/plugin-syntax-dynamic-import"
    ]
}